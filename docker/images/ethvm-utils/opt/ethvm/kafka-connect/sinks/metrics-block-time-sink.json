{
  "name": "metrics-block-time-sink",
  "config": {
    "connector.class": "io.confluent.connect.jdbc.JdbcSinkConnector",
    "tasks.max": 1,
    "topics": "canonical_block_time",
    "pk.mode": "record_key",
    "insert.mode": "upsert",
    "batch.size": 2000,
    "consumer.max.poll.records": 4000,
    "consumer.fetch.min.bytes": 10000,
    "consumer.fetch.wait.max.ms": 100,
    "connection.url": "{{ .Env.METRICS_JDBC_URL }}",
    "connection.user": "{{ .Env.METRICS_USER }}",
    "connection.password": "{{ .Env.METRICS_PASSWORD }}",
    "transforms": "convertTimestamp,snakeCaseValue",
    "transforms.snakeCaseValue.type": "com.ethvm.kafka.connect.transforms.SnakeCase$Value",
    "transforms.convertTimestamp.type": "org.apache.kafka.connect.transforms.TimestampConverter$Value",
    "transforms.convertTimestamp.target.type": "Timestamp",
    "transforms.convertTimestamp.field": "timestamp"
  }
}
