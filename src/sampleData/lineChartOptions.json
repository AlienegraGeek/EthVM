{
  "title": {
    "display": true,
    "padding": 5,
    "text": "Average Tx Fees",
    "lineHeight": 1
  },
  "legend": {
      "display":false

  },
  "responsive": true,
  "scales": {
    "yAxes": [{ 
      "ticks": {
        "beginAtZero": true
      }
    }],
    "xAxes": [{
      "display": false
    }]
  },
  "tooltips": {
    "backgroundColor": "#686868",
    "titleFontColor": "white",
    "bodyFontColor": "white"
  },
  "elements": {
      "line":{
        "borderColor": "#49e3ea"         
      },
      "point": {
        "backgroundColor": "#49e3ea",
          "hoverRadius": 6, 
          "borderColor": "#49e3ea",
          "borderWidth": 2 
        }     
               
  },
  "scaleShowLabels": false,
  "layout": {
    "padding": {  
        "left": 5,
        "right": 5,
        "top": 5,            
        "bottom": 0
    }
  }
}